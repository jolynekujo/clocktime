<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<TextView 
	    android:id="@+id/id_textview_time"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:textColor="#B5B5B5"
	    android:textSize="25sp"/>
	
	<TextView 
	    android:id="@+id/id_textview_label"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@id/id_textview_time"
	    android:layout_below="@id/id_textview_time"
	    android:layout_marginBottom="10dp"
	    android:layout_marginRight="14dp"
	    android:textColor="#B5B5B5"
	    android:textSize="12sp"/>
	
	<TextView 
	    android:id="@+id/id_textview_freq"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/id_textview_time"
	    android:layout_toRightOf="@id/id_textview_label"
	    android:layout_marginBottom="10dp"
	    android:textColor="#B5B5B5"
	    android:textSize="12sp"/>
    
	<CheckBox
        android:id="@+id/id_checkbox_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
	    android:layout_marginRight="20dp"
	    android:layout_marginTop="25dp"
	    android:focusable="false"
	    android:checked="true" />
	
</RelativeLayout>
